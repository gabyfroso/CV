<style>
    ul{
        &>ol{
            &>a{
                font-size: 2em;
                transition: letter-spacing 2s, scale 2s, transform 2s;

                &:hover{
                    letter-spacing: 4px;
                    scale: 1.1;
                }
                &.focus{
                    scale: 1.2;
                    transform: translateY(10px);

                }
            }
        }
    }
    header{
        position: fixed;
        display: grid;
        grid-template-columns: 50px auto;

        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        min-height: 60px;
        height: auto;

        background-color: rgba(0, 255, 255, 0.4);
        z-index: 20;
        &>button{
            width: 50px;
            height: 50px;
        }
    }

    nav{
        flex-grow: 1;
        background-color: rgba(137, 43, 226, 0.4);

        max-height: 100px;
        width: 100%;

        &>ul{
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            width: 100%;
            align-items: center;
            align-self: center;
            align-content: center;

            height: 60px;

            justify-content: space-around;
        }
    }
</style>