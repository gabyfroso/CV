---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Header from '@/components/header/Header.astro';
import VisualNav from '@/components/header/VisualNav.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main>
			<slot />
			<VisualNav/>
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 100%;
		background-image:  url('/img/index/space.png');
		animation: AnimBK 100s ease-in-out forwards infinite;
	}

	body{
		display: flex;
		flex-direction: column;
		&>main{
			padding-top: 100px;
			width: 100%;
		}
	}
	ul,li{
        padding: 0;
        margin: 0;
    }
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	@keyframes AnimBK {
		0%{
			background-size: 100%;
			background-position: 0% 0%;
			
		}
		40%{
			background-size: 180%;
			background-position: 20% 40%;
		}
		80%{
			background-size: 140%;
			background-position: 20% 40%;
		}
		100%{
			background-size: 100%;
			background-position: 0% 0%;
			
		}
	}
</style>
